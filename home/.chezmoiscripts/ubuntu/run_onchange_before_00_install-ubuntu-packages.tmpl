#!/usr/bin/env bash

function app_apt_repo {
  if [ ! -f /etc/apt/sources.list.d/$1.list ]; then
      curl -fsSL "$2" | gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/$1.gpg
      echo "$3" | sudo tee /etc/apt/sources.list.d/$1.list
  fi
}

{{- $packages := splitList " " (includeTemplate "ubuntu/packages" .) }}

echo Installing packages: {{- $packages | sortAlpha | uniq | join " " -}}
# {{ includeTemplate "universal/next-update" . }}
sudo apt-get update
sudo apt-get install -y --no-install-recommends {{ $packages | sortAlpha | uniq | join " " -}}